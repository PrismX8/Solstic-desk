{
  "appId": "com.solstice.desk",
  "productName": "Solstice Desk",
  "directories": {
    "output": "release"
  },
  "files": [
    "main.js",
    "preload.js",
    "package.json",
    "host/**/*",
    "native/**/*",
    "build/Release/**/*",
    "resources/ui/**/*"
  ],
  "asarUnpack": [
    "node_modules/screenshot-desktop/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "publisherName": "Solstice Desk"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "publish": {
    "provider": "generic",
    "url": "https://railways.up.railway.app/api/updates"
  }
}

